{
  "name": "rustytanton.com",
  "version": "1.0.0",
  "description": "Static HTML for rustytanton.com",
  "author": "Rusty Tanton",
  "homepage": "https://github.com/rustytanton/rustytanton.com#readme",
  "scripts": {
    "start": "node start.js",
    "lint": "npx --yes eslint public_html/index.js && npx --yes stylelint public_html/styles.css",
    "minifyjs": "npx terser public_html/index.js -o public_html/index.min.js --source-map",
    "clean": "rm -rf ./node_modules ./public_html/index.min.js ./public_html/index.min.js.map"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "eslint": "^9.2.0",
    "browser-sync": "^3.0.2",
    "stylelint": "^16.5.0",
    "stylelint-config-standard": "^36.0.0",
    "terser": "^5.31.0"
  }
}
