{
  "name": "rustytanton.com",
  "version": "1.0.0",
  "description": "Static HTML for rustytanton.com",
  "author": "Rusty Tanton",
  "homepage": "https://github.com/rustytanton/rustytanton.com#readme",
  "type": "module",
  "scripts": {
    "start": "node start.js",
    "lintjs": "npx eslint public_html/index.js",
    "lintcss": "npx stylelint public_html/styles.css",
    "minifycss": "npx css-minify -d public_html -o public_html",
    "minifyjs": "npx terser public_html/index.js -o public_html/index.min.js --source-map",
    "clean": "rm -rf ./node_modules ./public_html/index.min.js ./public_html/styles.min.css ./public_html/index.min.js.map"
  },
  "devDependencies": {
    "@eslint/js": "^9.2.0",
    "browser-sync": "^3.0.2",
    "chalk": "^5.3.0",
    "css-minify": "^2.0.0",
    "eslint": "^9.2.0",
    "globals": "^15.2.0",
    "stylelint": "^16.5.0",
    "stylelint-config-standard": "^36.0.0",
    "terser": "^5.31.0"
  }
}
